# EditorConfig Settings File
# (http://EditorConfig.org)

root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{diff,md}]
indent_style = tab
trim_trailing_whitespace = false

[*.json]
indent_size = 2
